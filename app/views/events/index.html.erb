<h3>The list of the events is:</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Location</th>
    <th>Organizer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>



<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.date %></td>
    <td><%= event.location %></td>
    <td><%= event.organizer %></td>
    <td><%= link_to 'Info', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p>Create a new event:<%= link_to 'New Event', new_event_path %></p>
